    var ur = AspDashboard.Classes.Authentication.UserEngine.getUser();
    var al = ur.User.getAuthLevel();

    if (al == AspDashboard.Classes.Authentication.EUserLevel.GlobalAdmin ||
        al == AspDashboard.Classes.Authentication.EUserLevel.GlobalModerator) {
        @AspDashboard.Classes.Util.Templates.RenderTabItem("ADCP", "/ADAdmin/Dashboard/Index")
    }
}

